@model IEnumerable<LMS_WebApplication.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Books Available</h2>

<table class="table">
    <tr>
        <th>
            ISBN
        </th>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
            Publisher
        </th>
        <th>
            Category
        </th>
        <th>
            Year Released
        </th>
        <th>
            Number of Pages
        </th>
        <th>
            Available Copies
        </th>
        <th>
            Shelf Number
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year_Released)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pages)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Num_of_Copies)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shelf_Number)
        </td>
    </tr>
}

</table>
